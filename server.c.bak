#include <stdio.h>
#include <sys/socket.h>
#include <sys/types.h>
#include <netinet/in.h>
#include <netinet/ip.h>
#include <unistd.h>
#include <arpa/inet.h>
#include <stdlib.h>
#include <time.h>
#define Loca_IP "192.168.1.40"
#define Loca_Prot 8080
int main()
{
	int Over=0;
